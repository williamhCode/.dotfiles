# https://github.com/koekeishiya/skhd

# focus window
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# swap managed window
shift + alt - h : yabai -m window --swap west
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - l : yabai -m window --swap east

# move managed window
shift + alt + ctrl - h : yabai -m window --warp west
shift + alt + ctrl - j : yabai -m window --warp south
shift + alt + ctrl - k : yabai -m window --warp north
shift + alt + ctrl - l : yabai -m window --warp east

# rotate tree
alt - r : yabai -m space --rotate 90
shift + alt - r : yabai -m space --rotate 270

# toggle window fullscreen zoom
alt - f : yabai -m window --toggle zoom-fullscreen

# float / unfloat window and center on screen
alt - t : \
    if [ "$(yabai -m query --windows --window | jq '."is-floating" == true')" = false ]; then message="floating"; else message="not floating"; fi ; \
    open /Users/williamhou/.dotfiles/bin/.local/scripts/send_yabai_notification.app --args "window is $message"; \
    yabai -m window --toggle float; \
    yabai -m window --grid 4:4:1:1:2:2

# alt - d : open /Users/williamhou/.dotfiles/bin/.local/scripts/send_yabai_notification.app --args "testing"


# expand float window
alt - return : yabai -m window --grid 1:1:1:1:1:1

# toggle window split type
alt - e : yabai -m window --toggle split

# balance size of windows
shift + alt - 0 : yabai -m space --balance

# move window and focus desktop
shift + alt - 1 : yabai -m window --space 1; yabai -m space --focus 1
shift + alt - 2 : yabai -m window --space 2; yabai -m space --focus 2
shift + alt - 3 : yabai -m window --space 3; yabai -m space --focus 3
shift + alt - 4 : yabai -m window --space 4; yabai -m space --focus 4
shift + alt - 5 : yabai -m window --space 5; yabai -m space --focus 5
shift + alt - 6 : yabai -m window --space 6; yabai -m space --focus 6
shift + alt - 7 : yabai -m window --space 7; yabai -m space --focus 7
shift + alt - 8 : yabai -m window --space 8; yabai -m space --focus 8
shift + alt - 9 : yabai -m window --space 9; yabai -m space --focus 9

# fast focus desktop
alt - 0 : yabai -m space --focus recent

# send window to space and follow focus
shift + alt - p : yabai -m window --space prev; yabai -m space --focus prev
shift + alt - n : yabai -m window --space next; yabai -m space --focus next

# increase window size
shift + alt - w : yabai -m window --resize top:0:-20
shift + alt - d : yabai -m window --resize left:-20:0

# decrease window size
shift + alt - s : yabai -m window --resize bottom:0:-20
shift + alt - a : yabai -m window --resize top:0:20

# stack/unstack
shift + alt - up : ~/.local/scripts/stack.sh north
shift + alt - down : ~/.local/scripts/stack.sh south
shift + alt - left : ~/.local/scripts/stack.sh west
shift + alt - right : ~/.local/scripts/stack.sh east

# switch between all windows
alt - tab : yabai -m query --spaces --space \
  | jq -re ".index" \
  | xargs -I{} yabai -m query --windows --space {} \
  | jq -sre 'add | map(select(."is-minimized"==false)) | sort_by(.display, .frame.y, .frame.x, .id) | . as $array | length as $array_length | index(map(select(."has-focus"==true))) as $has_index | if $has_index > 0 then nth($has_index - 1).id else nth($array_length - 1).id end' \
  | xargs -I{} yabai -m window --focus {}

shift + alt - tab : yabai -m query --spaces --space \
  | jq -re ".index" \
  | xargs -I{} yabai -m query --windows --space {} \
  | jq -sre 'add | map(select(."is-minimized"==false)) | sort_by(.display, .frame.y, .frame.x, .id) | . as $array | length as $array_length | index(map(select(."has-focus"==true))) as $has_index | if $array_length - 1 > $has_index then nth($has_index + 1).id else nth(0).id end' \
  | xargs -I{} yabai -m window --focus {}

# services
ctrl + alt - r : \
    open /Users/williamhou/.dotfiles/bin/.local/scripts/send_yabai_notification.app --args "quick reloading"; \
    launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"

meh - r : \
    open /Users/williamhou/.dotfiles/bin/.local/scripts/send_yabai_notification.app --args "restarting"; \
    brew services restart yabai; \
    brew services restart skhd

