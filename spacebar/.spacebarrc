#!/usr/bin/env sh

# general
spacebar -m config text_font "SF Mono:Regular:13.0"
spacebar -m config icon_font "Hack Nerd Font:Regular:13.0"

spacebar -m config display all
spacebar -m config position top
spacebar -m config spaces on
spacebar -m config background_color 0xff1b1e26

# space
# spacebar -m config space_icon_strip I II III IV V VI VII VIII IX X
spacebar -m config space_icon_strip     V VI VII VIII IX X
spacebar -m config spaces_for_all_displays off
spacebar -m config space_icon_color 0xff60afff

# center
spacebar -m config title on
# spacebar -m config center_shell_command "osascript -e 'tell application \"System Events\"' -e 'set frontApp to name of first application process whose frontmost is true' -e 'end tell'"
# spacebar -m config center_shell on

# power
spacebar -m config power_icon_strip  

# clock
spacebar -m config clock_format "%a %m/%d %I:%M %p"
spacebar -m config clock_icon_color 0xff60afff


echo "spacebar configuration loaded.."

